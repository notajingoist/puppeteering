extend layout
block content
    div(class='video-player', class='intro-bg')
        video(id='looped-video', preload, loop, class='hide', width='1920', height='1080')
            source(src='/video/LoopScene.mp4', type='video/mp4')
        video(id='bg-video', preload, class='hide', width='1920', height='1080')
            source(src='/video/Scene0.mp4', type='video/mp4')
        video(id='video-clip1', preload, class='hide', width='1920', height='1080')
            source(src='/video/Scene1.mp4', type='video/mp4')
        video(id='video-clip2', preload, class='hide', width='1920', height='1080')
            source(src='/video/Scene2.mp4', type='video/mp4')
        video(id='video-clip3', preload, class='hide', width='1920', height='1080')
            source(src='/video/Scene3.mp4', type='video/mp4')
    div(id='btn-clip1', class='btn-clip hover-off hide', data-id='1')
    div(id='btn-clip2', class='btn-clip hover-off hide', data-id='2')
    div(id='btn-clip3', class='btn-clip hover-off hide', data-id='3')
